---
interface Props {
  title: string;
  eyebrow?: string;
  description?: string;
}

const { title, eyebrow, description } = Astro.props as Props;
---

<div class="max-w-3xl space-y-3">
  {eyebrow && <p class="text-xs font-semibold uppercase tracking-[0.15em] text-brand-700">{eyebrow}</p>}
  <h2 class="text-3xl leading-tight text-slate-900">{title}</h2>
  {description && <p class="text-base text-slate-700 leading-relaxed">{description}</p>}
</div>
